<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/relativeAlcazaba"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/viewAlcazaba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/desbloqueadoAlcazaba"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/alcazabatarjetadesbloqueada"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/bloqueadoAlcazaba"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/alcazabatarjetabloqueada"
        android:visibility="visible"
        />

</RelativeLayout>